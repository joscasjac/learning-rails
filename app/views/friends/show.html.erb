
<div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold"><strong>Name: </strong><%= @friend.first_name %> <%= @friend.last_name %></h1>
        <p class="col-md-8 fs-4"><strong>Email: </strong><%= @friend.email %></p>
        <p class="col-md-8 fs-4"><strong>Phone: </strong><%= @friend.phone %></p>
        <p class="col-md-8 fs-4"><strong>Twitter: </strong><%= @friend.twitter %></p>
          <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary btn-lg" %> 
            <%= link_to "Back to friends", friends_path , class:"btn btn-secondary btn-lg" %>
       
      </div>
</div>
        


