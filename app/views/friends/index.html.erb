<h1>Friend List</h1>

<div id="friends">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
          <th>First name:</th>
          <th>Last name:</th>
          <th>Email:</th>
          <th>Phone:</th>
          <th>Twitter:</th>
          <th>Show Friend:</th>
          <th>Edit Friend:</th>
          <th>Delete Friend:</th>
        </thead>
        <tbody>
  <% @friends.each do |friend| %>
    <tr>
    <%= render friend %>
    </tr>

  <% end %>
      </tbody>
      </table>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary"%>
